<%= form_for(@blog) do |f| %>

     <%= f.label :title %><br>
     <%= f.text_field :title, placeholder: "Type the blog title here" %><br>
     <%= f.label :content %><br>
     <%= f.text_area :post, size: "60x12", placeholder: "Type the blog text here" %><br>


       <%= f.label :image %><br>
       <%= f.file_field :image %><br>


     <%= f.submit %>
<% end %>
