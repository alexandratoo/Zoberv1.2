<header>
  <%= render 'layouts/header' %>
</header>
<main>
<div class="container-fluid">
  <div class="hero-unit">
<div class=row-fluid>
    <button class="btn btn-md btn-light blogs"><%= link_to "all blogs", blogs_path %></button>
  </div>
    <div class="row-fluid">
              <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">

                  <%= image_tag(@blog.image_url(:medium).to_s, :class=> "img-fluid") %>

<h1 class='title'>
  <%= @blog.title %>
</h1>
</div>
</div>

<article class="blog-content">

          <div class="col-lg-8 col-md-10 mx-auto">


  <%= raw(@blog.post) %>


</div>

</article>
<p class="name"><strong>written by: </strong>
  <%= @blog.name %>
</p>
<p class="website"><strong> website:</strong>
  <%= link_to @blog.website, "http://#{@blog.website}", class: "website-form-link" %></p>
<p class="date">
  Submitted <%= time_ago_in_words(@blog.created_at) %> ago
</p><% if current_user %>
<div>

  <%= link_to 'edit', edit_blog_path(@blog), class: "edit-link" %>
  <%= link_to 'delete', blog_path(@blog), method: :delete, data:{ confirm: 'are you sure?'}, class: "delete-link" %>
</div>
<% else %>
<%= social_share_button_tag(@blog.title) %>
</div>
<div id="comments">
  <h2 class="comments-count"><%= @blog.comments.count %> comments</h2>
<%= render @blog.comments %>
<% end %>
<% if current_user %>
<%= render 'comments/form' %>
<% end %>


</div>
</div>
</main>
<div class="container-fluid">
  <%= render 'layouts/footer_main' %>
</div>
