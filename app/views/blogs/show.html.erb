<div class="container-fluid">
  <%= render 'layouts/header' %>
</div>
<div class="container-fluid">
  <div class="hero-unit">

    <%= image_tag @blog.image.url   %>
    <div class="row-fluid">
              <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
<h1 class='title'>
  <%= @blog.title %>
</h1>
</div>
</div>

<article class=blog-content>

          <div class="col-lg-8 col-md-10 mx-auto">

  <%= raw(@blog.post) %>

</div>

</article>
<p class="name">
  <%= @blog.name %>
</p>
<p class="website"> website:
  <%= link_to @blog.website, class: "website-form-link" %></p>
<p class="date">
  Submitted <%= time_ago_in_words(@blog.created_at) %> ago
  <%= link_to 'edit', edit_blog_path(@blog), class: "edit-link" %>
  <%= link_to 'delete', blog_path(@blog), method: :delete, data:{ confirm: 'are you sure?'}, class: "delete-link" %>
</p>
<%= social_share_button_tag(@blog.title) %>
</div>
<div id="comments">
  <h2 class="comments-count"><%= @blog.comments.count %> comments</h2>
<%= render @blog.comments %>

<%= render 'comments/form' %>



</div>
</div>
<div class="container-fluid">
  <%= render 'layouts/footer_main' %>
</div>
