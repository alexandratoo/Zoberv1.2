<div class="container-fluid">
  <div class="col-sm-12 mx-auto">
    <%= form_for House.new do |f|%>

<%= f.label :name%>
<%=f.text_field :name%>
<%= f.label :address%>
<%=f.text_field :address%>
<%= f.label :city%>
<%=f.text_field :city%>
<%= f.label :state %>
<%=f.text_field :state%>
<%= f.label :zip_code%>
<%=f.text_field :zip_code%>
<%= f.label :email%>
<%=f.text_field :email%>
<%= f.label :website%>
<%=f.text_field :website%>
<div class="row-fluid social-media">
<%= f.label :facebook%>
<%=f.text_field :facebook%>
<%= f.label :linkedin%>
<%=f.text_field :linkedin%>
<%= f.label :twitter%>
<%f.text_field :twitter%>
</div>
<%= f.label :capacity%>
<%=f.text_field :capacity%>
<%= f.label :price%>
<%=f.text_field :price%>
<%= f.label :deposit%>
<%=f.text_field :deposit%>

<div class = "row-fluid gender">
  <h6>What genders can stay at your facility</h6>
<%= radio_button_tag(:gender, "male") %>
<%= label_tag(:gender, "Men Only") %>
<%= radio_button_tag(:gender, "female") %>
<%= label_tag(:gender, "Women only") %>
<%= radio_button_tag(:gender, "coed") %>
<%= label_tag(:gender_coed, "Coed") %>
</div>
<div class="row-fluid payment">
  <h6>Which payment forms do you accept</h6>
<%= check_box_tag(:credit) %>
<%= label_tag(:credit, "Credit Cards") %>
<%= check_box_tag(:gender_male) %>
<%= label_tag(:cash, "Cash") %>
<%= check_box_tag(:Check) %>
<%= label_tag(:check, "Check") %>
</div>
<%= f.label :insurance, "Do you take insurance? check if yes"%>
<%= f.check_box(:insurance, {}, "True", "False") %>
<div class="row-fluid description">
  <%= f.label :property_description%>
  <%=f.text_area :property_description%>
</div>
<div class="row-fluid"><h6>Please describe the neighborhood surrounding the property</h6>
  <!-- <%= f.label :neighborhood %> -->
  <%= f.text_area :neighborhood  %>
</div>
<div class="row-fluid smoking">
  <h6>What is your smoking policy?</h6>
<%= check_box_tag(:smoking_policy) %>
<%= label_tag(:smoking_policy, "No Smoking") %>
<%= check_box_tag(:smoking_policy) %>
<%= label_tag(:smoking_policy, "Vaping allowed") %>
<%= check_box_tag(:smoking_policy) %>
<%= label_tag(:smoking_policy, "Smoking allowed outside") %>
</div>

<div class="row-fluid transport">
  <%= f.label :transportation, "Is transportation to the facility provided? check if yes"%>
<%= f.check_box(:insurance, {}, "True", "False") %>
</div>
<div class="row-fluid parking">
<%= f.label :parking, "Is parking available? check if yes"%>
<%= f.check_box(:parking, {}, "True", "False") %>
</div>
<div class="row-fluid activites">
  <%= f.label :activities, "Please describe some of the activites you provide for your guests. For example: pool, hot-tub, airhockey etc." %>
<%= f.text_area :activities %>
</div>
<div class="row-fluid amenities">
  <%= f.label :room_amenities, "What does the standard room provide? For example: cupboards, dresser etc." %>
<%= f.text_area :room_amenities %>
</div>
<div class="row-fluid transport">

    <%= f.label :hotttub, "Is there a hot tub? check if yes"%>
  <%= f.check_box(:hotttub, {}, "True", "False") %>
  <%= f.label :ac, "Is there ac? check if yes"%>
<%= f.check_box(:ac, {}, "True", "False") %>
<%= f.label :heating, "Is there a heating? check if yes"%>
<%= f.check_box(:heating, {}, "True", "False") %>

</div>
<div class="row-fluid internet">
  <h6>Is there internet available, and if so, what type?</h6>
<%= check_box_tag(:internet) %>
<%= label_tag(:internet, "None") %>
<%= check_box_tag(:internet) %>
<%= label_tag(:internet, "Wifi") %>
<%= check_box_tag(:internet) %>
<%= label_tag(:internet, "Ethernet") %>
</div>
<% end %>
  </div>
</div>
