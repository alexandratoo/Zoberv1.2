<section>
  <%= render "layouts/header" %>
</section>

<section class="house-display">
  
  <div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carousel" data-slide-to="0" class="active"></li>
      <li data-target="#carousel" data-slide-to="1"></li>
      <!-- <li data-target="#carousel" data-slide-to="2"></li> -->
    </ol>
    <div class="carousel-inner">

      <div class="carousel-item active">
          <div class="row">
            <div class="col-sm">
              <img class="d-block w-100" src= <%=@house.images[0].image %> alt="First slide">
            </div>
            <div class="col-sm"> 
              <img class="d-block w-100" src= <%=@house.images[1].image %> alt="Second slide">
            </div>
            <div class="col-sm">
              <img class="d-block w-100" src= <%=@house.images[2].image %> alt="Third slide">
            </div>
          </div>
      </div>

      <div class="carousel-item">
          <div class="row">
            <div class="col-sm">
              <img class="d-block w-100" src="https://st.hzcdn.com/fimgs/e611e9c00c13a4db_1000-w400-h300-b0-p0--eclectic-kitchen.jpg" alt="First slide">
            </div>
            <div class="col-sm"> 
              <img class="d-block w-100" src="https://www.99northconstruction.com/wp-content/uploads/2016/05/99northconstruction-bathroom-remodeling-400x300.jpg" alt="Second slide">
            </div>
            <div class="col-sm">
              <img class="d-block w-100" src="http://www.suncoastbrickpavers.com/images/pool-decks-01.jpg" alt="Third slide">
            </div>
          </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <br>
  
  <div class="row">
    <div class="col-6">
  
      <img class="img-fluid" src= <%=@house.images[0].image %> alt="house-image-1"> 
      <br>
      <img class="img-fluid" src= <%=@house.images[1].image %> alt="house-image-2"> 
      <br>
      <img class="img-fluid" src= <%=@house.images[2].image %> alt="house-image-3"> 
    </div>

    <div class="col-6">
      <h3> <%=@house.name%> </h3>
      <h5> <%=@house.property_description%> in <%=@house.city%>. </h5>
      <br>

      <p> Price: <%= number_to_currency(@house.price)%> /  Deposit: <%=number_to_currency(@house.deposit)%> </p>
      <p> Neighborhood: <%=@house.neighborhood%> </p>
      <p> Gender: <%=@house.gender%> Only </p>
      <p> Smoking Policy: <%=@house.smoking_policy%> </p>
      <p> Activities: <%=@house.activities%> </p>
      <p> Room Amenities: <%=@house.room_amenities%> </p>
      <p> Hot Tub: <%=@house.hotttub%> </p>
      <p> Capacity: <%=@house.capacity%> </p>
      
      <!-- icon booleans -->
      <% if @house.transportation %>
        <p> <i id="amenities" class="fa fa-bus"></i> Transportation Available </p>
      <% end %>
      <% if @house.pets %>
        <p> <i id="amenities" class="fa fa-paw"></i> Pets Accepted</p>
      <% end %>
      <% if @house.transportation %>
        <p> <i id="amenities" class="fa fa-bus"></i> Transportation Available </p>
      <% end %>
      <% if @house.ac %>
        <p> <i id="amenities" class="fa fa-snowflake-o"></i> AC </p>
      <% end %>
      <% if @house.heating %>
        <p> <i id="amenities" class="fa fa-thermometer-three-quarters"></i> Heat </p>
      <% end %>
      <% if @house.parking %>
        <p> <i id="amenities" class="fa fa-car"></i> Parking Available </p>
      <% end %>
      <% if @house.insurance %>
        <p> <i id="amenities" class="fa fa-id-card-o"></i> Insurance Accepted</p>
      <% end %>
      <!-- end of icon booleans -->

      <p> <i id="amenities" class="fa fa-television" ></i> TV: <%= @house.tv %> </p>
      <p> <i id="amenities" class="fa fa-wifi" ></i> Internet: <%= @house.internet %> </p>

    </div>
  </div>
</section>


<section>
  <%= render "layouts/footer_main" %>
</section>

