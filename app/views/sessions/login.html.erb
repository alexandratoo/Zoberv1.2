<%= render 'layouts/header' %>
<% provide(:title, 'Login') %>

<h1>Login</h1>

<%= form_for(:login) do |f| %>

  <p>
    <%= f.label 'email' %>
    <%= f.text_field 'email' %>
  </p>

  <p>
    <%= f.label 'password' %>
    <%= f.password_field 'password' %>
  </p>

  <%= f.submit 'Login' %>
<% end %>

<%= render 'layouts/modal' %>
<%= render 'layouts/footer_main'%>
