<%= render 'layouts/header' %>
<% provide(:title, 'Login') %>


<div class="container-fluid">
<div class="page-header">


  <!-- <%= link_to root_path, class: 'return' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %> -->
  <h1 class="login_title">login</h1>
  <div class="google_auth">
    <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
    <% else %>
    <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
    <% end %>
  </div>
</div>

<%= form_tag login_path, class: 'form-horizontal', role: 'form' do %>
  <div class='form-group'>
    <%= label_tag :email, nil, class: 'col-sm-12 control-label' %>
    <div class="col-sm-12">
      <%= email_field_tag :email, nil, class: "email", placeholder: 'user@domain.com' %>
    </div>
  </div>

  <div class='form-group'>
    <%= label_tag :password, nil, class: 'col-sm-12 control-label' %>
    <div class="col-sm-12">
      <%= password_field_tag :password, nil, class: "password", placeholder: 'password' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-12">
      <%= submit_tag 'login', class: 'do_login' %>
    </div>
  </div>
<% end %>
</div>

<%= render 'layouts/footer_main'%>
